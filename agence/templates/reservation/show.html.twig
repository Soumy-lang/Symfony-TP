{% extends 'base.html.twig' %}

{% block title %}Détails de la réservation{% endblock %}

{% block body %}
    <h1>Réservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Véhicule</th>
                <td>{{ reservation.vehicle.marque }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ reservation.startDate|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ reservation.endDate|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Prix total</th>
                <td>{{ reservation.totalPrice }} €</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ reservation.isCancelled ? 'Annulée' : 'Active' }}</td>
            </tr>
        </tbody>
    </table>

    {% if not reservation.isCancelled and reservation.startDate > "now"|date %}
        <a href="{{ path('app_reservation_cancel', {'id': reservation.id}) }}" class="btn btn-danger">Annuler la réservation</a>
    {% endif %}

    <a href="{{ path('app_vehicle_index') }}" class="btn btn-secondary mt-3">Retour aux véhicules</a>
{% endblock %}
