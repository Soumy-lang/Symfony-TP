{% extends 'base.html.twig' %}

{% block title %}{{ vehicle.marque }}{% endblock %}

{% block body %}
    <h1>{{ vehicle.marque }}</h1>
    <p>Nombre de r√©servations : {{ numberOfReservations }}</p>

    <table class="table">
        <tbody>
            <tr>
                <th>Immatriculation</th>
                <td>{{ vehicle.immatriculation }}</td>
            </tr>
            <tr>
                <th>Prix Journalier</th>
                <td>{{ vehicle.prixJournalier }} ‚Ç¨</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ vehicle.disponible ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <form method="post" action="{{ path('app_favorite_toggle', {'id': vehicle.id}) }}">
        <button type="submit" class="btn {% if vehicle.id in favoriteVehicleIds %}btn-danger{% else %}btn-outline-primary{% endif %}">
            {% if vehicle.id in favoriteVehicleIds %}‚ù§Ô∏è Retirer des favoris{% else %}üíô Ajouter aux favoris{% endif %}
        </button>
    </form>


    <h2>Commentaires</h2>
    {% for comment in comments %}
        <div class="comment">
            <p><strong>Note:</strong> {{ comment.rating }}/5</p>
            <p>{{ comment.content }}</p>
            <small>Post√© le {{ comment.createdAt|date('d/m/Y H:i') }}</small>
        </div>
        <hr>
    {% else %}
        <p>Aucun commentaire pour ce v√©hicule.</p>
    {% endfor %}

    {% if averageRating is not null %}
        <p><strong>Note moyenne :</strong> {{ averageRating|number_format(1) }}/5 ‚≠ê</p>
    {% else %}
        <p>Aucune note disponible</p>
    {% endif %}

    {% if hasRented %}
        <h2>Ajouter un commentaire</h2>
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.content) }}
                {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.rating) }}
                {{ form_widget(form.rating, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-primary mt-2">Envoyer</button>
        {{ form_end(form) }}
    {% else %}
        <p class="text-muted">Vous devez avoir lou√© ce v√©hicule pour laisser un commentaire.</p>
    {% endif %}

    <a href="{{ path('app_vehicle_index') }}" class="btn btn-secondary mt-3">Retour √† la liste</a>
{% endblock %}
